#!/bin/sh

main() {
  case "$1" in
    install)
      install
      ;;
    link)
      link
      ;;
    *)
      echo "Usage: $0 {install|link}"
      exit 1
      ;;
  esac
}

prints() {
  printf "\033[1;32m%s\033[0m\n" "$1"
}

printe() {
  printf "\033[1;31m%s\033[0m\n" "$1"
}

get_sudo() {
  if command -v sudo >/dev/null 2>&1; then
    echo "sudo"
  else
    echo ""
  fi
}

is_debian() {
  if command -v apt >/dev/null 2>&1; then
    return 0
  else
    return 1
  fi
}

install_package() {
  prints "Installing $1..."
  sudo=$(get_sudo)
  if is_debian; then
    $sudo apt-get install -y "$1" >/dev/null
  else
    printe "No supported package manager found."
    exit 1
  fi
}
